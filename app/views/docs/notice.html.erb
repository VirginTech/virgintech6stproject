<!--========================
タイトル、メタ情報表示
==========================-->
<% content_for :head do %>
  <title>お知らせ | ゲームニスト - ゲームアプリソーシャルレビューサービス</title>
  <meta name="description" content="ゲームニスト | お知らせ">
  <meta name="keywords" content="ゲームニスト,お知らせ">
<% end %>

<!--========================
ヘッダー表示
==========================-->
<%= render 'layouts/header' %>

<!--========================
フラッシュメッセージ
==========================-->
<div class="container-fluid" style="margin-top:10px;">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>

<!--
============================= 
お知らせ（本文）
=============================
-->
<div class="container-fluid" style="margin-top:10px;">
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-3"></div>
    
    <div class="col-xs-12 col-sm-8 col-md-6">
      
      <% @notices.each do |notice| %>
        <% if Date.today>=notice.release_date %>
          <div class="panel panel-info">
            <div class="panel-heading">
              <h2 class="panel-title">
                <%=notice.subject %>
              </h2>
            </div>
            <div class="panel-body">
              <div class="txtTempSet txtTemp2 clearfix">
                <div class="fL">
                  <span>
                    <%#=simple_format(h(notice.notice_body)) %>
                    <%= auto_link(simple_format(notice.notice_body), link = :urls, href_options = {:target => '_blank'})  %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

    </div>

    <div class="col-xs-12 col-sm-2 col-md-3"></div>
  </div>  
</div>

<!--=========================
余白
==========================-->
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 text-center" style="height:50px;">
  
    </div>
  </div>
</div>

<!--========================
フッダー表示
==========================-->
<%= render 'layouts/footer' %>

<!--========================
バックスクロールボタン表示
==========================-->
<%= render 'layouts/back_scroll_btn' %>