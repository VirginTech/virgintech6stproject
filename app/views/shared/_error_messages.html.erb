<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" style="margin-top:10px;">
      <%= object.errors.count %> 箇所のエラーがあります。
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>