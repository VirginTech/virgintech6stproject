<!--========================
タイトル、メタ情報表示
==========================-->
<% content_for :head do %>
  <title><%= @user.nickname %> | ゲームニスト - ゲームアプリソーシャルレビューサービス</title>
  <meta name="description" content="ゲームニスト | <%= @user.nickname %> に関する情報です。">
  <meta name="keywords" content="ゲームニスト,<%= @user.nickname %>">
<% end %>

<!--========================
ヘッダー表示
==========================-->
<%= render 'layouts/header' %>

<!--========================
フロート・バー表示
==========================-->
<%= render 'users/float_userpage_bar' %>

<!--========================
フラッシュメッセージ
==========================-->
<div class="container-fluid" style="margin-top:70px;">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>

<!--========================
ボディ
==========================-->
<div class="container-fluid">        <!-- 全体を囲むコンテナ -->

  <div class="row">
    <!--========================
    左サイド
    ==========================-->
    <div class="col-xs-12 col-sm-4 col-md-3">
      <aside class=user-mypage-left>
        <%= render 'users/user_profile' %>
        <% if dev_logged_in? %>
          <%= render 'developers/dev_side_menu' %>
        <% end %>
        <% if user_logged_in? %>
          <%= render 'users/user_side_menu' %>
        <% end %>
        
        <!-- i-mobile for PC client script
        <div class="sticky-ad-left  width-300 visible-md visible-lg">
        	<script type="text/javascript">
        		imobile_pid = "31967"; 
        		imobile_asid = "753017"; 
        		imobile_width = 300; 
        		imobile_height = 250;
        	</script>
        	<script type="text/javascript" src="http://spdeliver.i-mobile.co.jp/script/ads.js?20101001"></script>
        </div> -->
        <!-- i-mobile for PC client script
        <div class="sticky-ad-left  width-200 visible-sm">
        	<script type="text/javascript">
        		imobile_pid = "31967"; 
        		imobile_asid = "755168"; 
        		imobile_width = 200; 
        		imobile_height = 200;
        	</script>
        	<script type="text/javascript" src="http://spdeliver.i-mobile.co.jp/script/ads.js?20101001"></script>
        </div> -->
        
      </aside>
    </div>
    <!--========================
    中央（メイン）
    ==========================-->
    <div class="col-xs-12 col-sm-8 col-md-6">
      <div class="user-mypage-center page-center">
        
        <!-- i-mobile for PC client script -->
        <div style="text-align:center;" class="visible-sm visible-md visible-lg">
        	<script type="text/javascript">
        		imobile_pid = "31967"; 
        		imobile_asid = "754817"; 
        		imobile_width = 468; 
        		imobile_height = 60;
        	</script>
        	<script type="text/javascript" src="http://spdeliver.i-mobile.co.jp/script/ads.js?20101001"></script>
      	</div>
        <!-- i-mobile for SmartPhone client script -->
        <div style="text-align:center;" class="visible-xs">
          <!-- i-mobile for SmartPhone client script -->
        	<script type="text/javascript">
        		imobile_tag_ver = "0.3"; 
        		imobile_pid = "31967"; 
        		imobile_asid = "755133"; 
        		imobile_type = "icon_inline";
          	imobile_style = {
          		align: "center",
          	};
          	imobile_icon = {
          		num: "3",
          		show_title: "true",
          	};
        	</script>
        	<script type="text/javascript" src="http://spad.i-mobile.co.jp/script/adssp.js?20110215"></script>
        </div>
        
        <p></p>        
        <%= render 'users/user_activity_list' %>
      </div>
    </div>
    <!--========================
    右サイド
    ==========================-->
    <div class="col-xs-12 col-md-3 hidden-xs hidden-sm">
      <div class="user-mypage-right">

        <!-- i-mobile for PC client script -->
        <div class="sticky-ad-right">
        	<script type="text/javascript">
        		imobile_pid = "31967"; 
        		imobile_asid = "753155"; 
        		imobile_width = 160; 
        		imobile_height = 600;
        	</script>
        	<script type="text/javascript" src="http://spdeliver.i-mobile.co.jp/script/ads.js?20101001"></script>
      	</div>

      </div>
    </div>
    
  </div>
</div>        <!-- 全体を囲むコンテナ -->

<!--=========================
余白
==========================-->
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 text-center" style="height:50px;">
  
    </div>
  </div>
</div>

