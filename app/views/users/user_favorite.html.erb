<!--========================
タイトル、メタ情報表示
==========================-->
<% content_for :head do %>
  <title><%= @user.nickname %> | ゲームニスト - ゲームアプリソーシャルレビューサービス</title>
  <meta name="description" content="ゲームニスト | <%= @user.nickname %> に関する情報です。">
  <meta name="keywords" content="ゲームニスト,<%= @user.nickname %>">
<% end %>

<!--========================
ヘッダー表示
==========================-->
<%= render 'layouts/header' %>

<!--========================
フロート・バー表示
==========================-->
<%= render 'users/float_userpage_bar' %>

<!--========================
フラッシュメッセージ
==========================-->
<div class="container-fluid" style="margin-top:70px;">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>

<!--========================
ボディ
==========================-->
<div class="container-fluid">        <!-- 全体を囲むコンテナ -->

  <div class="row">
    <!--========================
    左サイド
    ==========================-->
    <div class="col-xs-12 col-sm-4 col-md-3">
      <aside class=user-mypage-left>
        <%= render 'users/user_profile' %>
        <% if same_user?(@user.id) %>
          <%= render 'users/user_side_menu' %>
        <% end %>
      </aside>
    </div>
    <!--========================
    中央（メイン）
    ==========================-->
    <div class="col-xs-12 col-sm-8 col-md-6">
      <div class="user-mypage-center">
        <%= render 'users/user_favorite' %>
      </div>
    </div>
    <!--========================
    右サイド
    ==========================-->
    <div class="col-xs-12 col-md-3 hidden-xs hidden-sm">
      <!--ダミー広告-->
      <div class="user-mypage-right">
        <%= image_tag 'ad_dummy.png',class:"img-responsive" %>
      </div>
    </div>
    
  </div>

</div>        <!-- 全体を囲むコンテナ -->

<!--=========================
余白
==========================-->
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 text-center" style="height:50px;">
  
    </div>
  </div>
</div>

<!--========================
フッダー表示
==========================-->
<%= render 'layouts/footer' %>

<!--========================
バックスクロールボタン表示
==========================-->
<%= render 'layouts/back_scroll_btn' %>