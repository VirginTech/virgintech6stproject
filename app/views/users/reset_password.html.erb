<!--========================
ヘッダー表示
==========================-->
<%= render 'layouts/header' %>

<!--========================
フラッシュメッセージ
==========================-->
<div class="container-fluid" style="margin-top:10px;">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>

<!--========================
ボディ
==========================-->
<div class="container">        <!-- 全体を囲むコンテナ -->
  <div class="row">
    <div class="col-xs-12 col-sm-1"></div>
    <div class="col-xs-12 col-sm-10 pass-remind">

      <div class="panel panel-info">
        <div class="panel-heading">
          <h2 class="panel-title glyphicon glyphicon-envelope"> パスワードを再設定して下さい</h2>
        </div>
        <div class="panel-body" style="height:250px;">
        
          <%= form_for(@user, :url => {controller:"users", action:"update_password"}) do |f| %>
            <!--アカウントID-->
            <%= f.hidden_field :uuid, :value => params[:uuid] %>
            <p></p>
            <span class="input-label">パスワード</span>
            <%= f.password_field :password, class: 'form-control', autofocus: true %>
            <p></p>
            <span class="input-label">パスワード（確認用）</span>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
            <p></p>
            <%= f.submit "変更する", class: "btn btn-primary" %>
            <p></p>
          <% end %>

        </div>
        <div class="panel-footer">
          <span class="glyphicon glyphicon-exclamation-sign"></span>
          パスワードを入力して「変更する」をクリックして下さい。<br class="hidden-xs">
          成功すると自動的にトップ画面に移ります。そこから新しいパスワードでログインして下さい。
        </div>
      </div>

    </div>
    <div class="col-xs-12 col-sm-1"></div>
  </div>
</div>        <!-- 全体を囲むコンテナ -->

<!--========================
フッダー表示
==========================-->
<%= render 'layouts/footer' %>
