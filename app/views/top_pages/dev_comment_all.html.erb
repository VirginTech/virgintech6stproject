<!--========================
ヘッダー表示
==========================-->
<%= render 'layouts/header' %>

<!--========================
フロート・バー表示
==========================-->
<%= render 'top_pages/float_search_bar' %>

<!--========================
サイド・バー表示
==========================-->
<%= render 'top_pages/side_bar' %>

<!--========================
サーチボックス表示
==========================-->
<%= render 'top_pages/search_box' %>

<!--========================
フラッシュメッセージ
==========================-->
<div class="container-fluid" style="margin-top:50px;">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>

<!--========================
ボディ
==========================-->
<content>
  <div class="container-fluid">
    <div class="row">

      <!--========================
      左サイド
      ==========================-->
      <div class="col-xs-12 col-sm-4 col-md-3 hidden-xs">
        <aside class=top-page-left>
          <!--ダミー広告-->
          <%= image_tag 'ad_dummy.png',class:"img-responsive" %>
        </aside>
      </div>
      <!--========================
      中央（メイン）
      ==========================-->
      <div class="col-xs-12 col-sm-8 col-md-6">
        <div class="top-page-center">
          <%= render 'top_pages/dev_comment_all' %>
        </div>
  
      </div>
      <!--========================
      右サイド
      ==========================-->
      <div class="col-xs-12 col-md-3 hidden-sm hidden-xs">
        <!--ダミー広告-->
        <div class="top-page-right">
          <%= image_tag 'ad_dummy.png',class:"img-responsive" %>
        </div>
      </div>

    </div>
  </div>
</content>

<!--========================
フッダー表示
==========================-->
<%= render 'layouts/footer' %>

<!--========================
バックスクロールボタン表示
==========================-->
<%= render 'layouts/back_scroll_btn' %>
