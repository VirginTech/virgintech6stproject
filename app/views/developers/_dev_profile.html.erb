<div class="panel panel-info">
  <div class="panel-heading">
    <h2 class="panel-title">デベロッパープロフィール</h2>
  </div>
  <div class="panel-body dev-profile">
    
    <!--プロフィールアイコン-->
    <% if @developer.profile_img? %>
      <%= link_to developer_path(@developer) do %>
        <%= image_tag @developer.profile_img.url, class:"profile-icon" %>
      <% end %>
    <% else %>
      <%= link_to developer_path(@developer) do %>
        <%= image_tag 'no_profile_img.png', class:"profile-icon" %>
      <% end %>
    <% end %>
    
    <!--名前-->
    <span class="profile-name">
      <%= link_to @developer.name, developer_path(@developer) %>
    </span>
    <br />

    <!--プロフィール-->
    <span class="my-profile">
      プロフィールプロフィールプロフィールプロフィールプロフィールプロフィールプロフィール
    </span>
    
    <!--Webサイト-->
    <% if @developer.website? %>
      <span class="profile-website glyphicon glyphicon-home">:<%=link_to @developer.website, @developer.website %></span>
    <% end %>
    
    <!--公開メール-->
    <% if @developer.contact_email? %>
      <span class="profile-email glyphicon glyphicon-envelope">:<%=link_to @developer.contact_email, 'mailto:' + @developer.contact_email %></span>
    <% end %>
    
    <!--その他サイト-->
    <% if @developer.official_site? %>
      <span class="profile-website glyphicon glyphicon-star">:<%=link_to @developer.official_site, @developer.official_site %></span>
    <% end %>
    <br />
    
    <!--ツイッター-->
    <% if @developer.twitter? %>
      <%=link_to @developer.twitter do %><%= image_tag 'twitter.png', class:"profile-sns" %><% end %>
    <% end %>
    <!--Facebook-->
    <% if @developer.facebook? %>
      <%=link_to @developer.facebook do %><%= image_tag 'facebook.png', class:"profile-sns" %><% end %>
    <% end %>
    <!--Google+-->
    <% if @developer.google? %>
      <%=link_to @developer.google do %><%= image_tag 'google.png', class:"profile-sns" %><% end %>
    <% end %>

    <!--登録アプリ-->
    <div class="bg-info text-info app-label">登録アプリ</div>
    <% @developer.products.each do |product| %>
      <% if product.id? %>
        <%= link_to product_path(product) do %>
          <%= image_tag product.img_icon.url, class:"profile-appicon" %>
        <% end %>
      <% end %>
    <% end %>

  </div>
</div>
