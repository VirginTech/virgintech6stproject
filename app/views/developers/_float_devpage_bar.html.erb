<floatbar>
  <div class="sticky-menu-bar">
    <div class="btn-toolbar">
      <div class="btn-group btn-group-justified">
        <%= link_to developer_path(@developer), class:"btn btn-default" do %>
          <span class="glyphicon glyphicon-knight floatbar-btn">登録アプリ</span>
        <% end %>
        <%= link_to dev_comment_show_path(id: @developer.id), class:"btn btn-default" do %>
          <span class="glyphicon glyphicon-comment floatbar-btn">開発者コメ</span>
        <% end %>
        <%= link_to dev_activity_path(id: @developer.id), class:"btn btn-default" do %>
          <span class="glyphicon glyphicon-link floatbar-btn">アクティビティ</span>
        <% end %>
      </div>
    </div>
  </div>
</floatbar>
